{
    "manifest_version": 2,
    "name": "Color Picker Extension",
    "version": "1.0",
    "description": "A color picker extension to pick colors from the current website",
    "permissions": ["activeTab"],
    "author": "Ayush Mitra",
    "browser_action": {
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["script.js"]
      }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon96.png"
    }
  }
  